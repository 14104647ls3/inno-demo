{
    "builds": [
        {
            "src": "ai-server/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/ai-server/main.py"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}